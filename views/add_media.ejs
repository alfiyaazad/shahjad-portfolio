<body>
<div class="container d-flex justify-content-center">
    
    <form class="col-md-6 mt-" enctype="multipart/form-data" action="/admin/add/media" method="post">
        <h1 class="my-4">Add New Media</h1>
        <div class="col-md-12 mb-5">
            <label for="title">Media title</label>
            <input class="form-control" type="text" name="title" id="title" placeholder="Enter media title">
        </div>
        <div class="col-md-12 mb-5">
            <label for="subtitle">Media SubTitle</label>
            <input class="form-control" type="text" name="subtitle" id="subtitle" placeholder="Enter media subtitle">
        </div>
        <div class="col-md-12 mb-5">
            <label for="image">Image</label>
            <input class="form-control" type="file" name="image" id="image" >
        </div>
        <div class="col-md-12 mb-5">
            <label for="published_date">Published Date</label>
            <input class="form-control" type="date" name="published_date" id="published_date" >
        </div> <div class="col-md-12 ">
            <label for="link">Media Link</label>
            <input class="form-control" type="text" placeholder="Link to the article" name="link" id="link" >
        </div>

        <button type="submit" class="btn btn-outline-dark my-5">Add New Media</button>

    </form>

</div>




</body>

